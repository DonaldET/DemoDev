<?xml version="1.0" encoding="UTF-8"?>
<!-- Deployed version of application context -->
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">

	<description>Text based generator configuration.</description>

	<!-- Component scan fails for files in jars -->
	<!-- <context:component-scan base-package="don.demo.generator" /> -->

	<context:annotation-config />

	<bean id="version" class="java.lang.String" scope="singleton">
		<constructor-arg>
			<value>1.0.0-SNAPSHOT</value>
		</constructor-arg>
	</bean>

	<!-- Spring discovery of components fails when components are in jars, list 
		explicitly -->
	<bean id="argumentparser" class="don.demo.generator.arguments.tools.ArgumentParserArgs4J"
		scope="singleton">
		<property name="DisplayParameterErrors" value="TRUE" />
	</bean>
	<bean id="tsgcomposemodel" class="don.demo.generator.build.TSGComposeModel"
		scope="singleton" />
	<bean id="tsggenerator" class="don.demo.generator.build.TSGGenerator"
		scope="singleton" />
	<bean id="tsginputoutputbuilder" class="don.demo.generator.build.TSGInputOutputBuilder"
		scope="singleton" />
	<bean id="tsgparametersetup" class="don.demo.generator.build.TSGParameterSetup"
		scope="singleton" />
	<bean id="modelbuilder" class="don.demo.generator.model.impl.PropertyModelBuilderImpl"
		scope="singleton" />
	<bean id="modelloader" class="don.demo.generator.model.impl.PropertyModelLoaderImpl"
		scope="singleton" />

</beans>
